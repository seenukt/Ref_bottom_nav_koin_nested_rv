<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Layer (Padding Effect) -->
    <item>
        <shape android:shape="oval">
            <size android:height="10dp" android:width="10dp" /> <!-- Outer size -->
            <solid android:color="#67B613" /> <!-- Outer color (acts as padding background) -->
        </shape>
    </item>

    <!-- Inner Layer (Actual Thumb) -->
    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="oval">
            <size android:height="10dp" android:width="10dp" /> <!-- Inner size -->
            <solid android:color="#C2CABA" /> <!-- Inner thumb color -->
        </shape>
    </item>
</layer-list>
