<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Layer (Padding Effect) -->
    <item>
        <shape>
            <size android:height="20dp" android:width="60dp" /> <!-- Outer size -->
            <solid android:color="#67B613" /> <!-- Outer color (acts as padding background) -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Inner Layer (Actual Track) -->
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">
        <shape>
            <size android:height="14dp" android:width="54dp" /> <!-- Inner size -->
            <solid android:color="#67B613" /> <!-- Inner track color -->
            <corners android:radius="7dp" /> <!-- Rounded corners for the inner track -->
        </shape>
    </item>
</layer-list>